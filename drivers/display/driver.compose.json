{
  "name": {
    "en": "Button Display"
  },
  "class": "button",
  "capabilities": [
    "onoff.left",
    "onoff.right"
  ],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "pair": [
      {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
              "next": "add_my_devices"
          }
      },
      {
          "id": "add_my_devices",
          "template": "add_devices"
      }
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  }
}