{
    "name": {
        "en": "Button Panel",
        "nl": "Button+ panel"
    },
    "platforms": [
        "local"
    ],
    "connectivity": [
        "lan"
    ],
    "class": "button",
    "capabilities": [
        "configuration_display",
        "configuration_button.connector0",
        "configuration_button.connector1",
        "configuration_button.connector2",
        "configuration_button.connector3",
        "configuration_button.connector4",
        "configuration_button.connector5",
        "configuration_button.connector6",
        "configuration_button.connector7",
        "left_button.connector0",
        "right_button.connector0",
        "left_button.connector1",
        "right_button.connector1",
        "left_button.connector2",
        "right_button.connector2",
        "left_button.connector3",
        "right_button.connector3",
        "left_button.connector4",
        "right_button.connector4",
        "left_button.connector5",
        "right_button.connector5",
        "left_button.connector6",
        "right_button.connector6",
        "left_button.connector7",
        "right_button.connector7",
        "dim.large",
        "dim.small",
        "dim.led",
        "measure_temperature",
        "date",
        "time",
        "info"
    ],
    "capabilitiesOptions":{
        "dim.large": {
            "title": {
                "en": "Large display",
                "nl": "Grote display"
            }
        },
        "dim.small": {
            "title": {
                "en": "Mini display",
                "nl": "Mini display"
            }
        },
        "dim.led": {
            "title": {
                "en": "LED",
                "nl": "LED"
            }
        }
    },
    "pair": [
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": {
                "next": "my_connect"
            }
        },
        {
            "id": "my_connect"
        }
    ],
    "settings": [
        {
            "id": "address",
            "type": "text",
            "label": {
                "en": "IP address",
                "nl": "IP adres"
            },
            "value": "",
            "hint": {
                "en": "IP address of the device",
                "nl": "IP adres van het apparaat"
            }
        },
        {
            "id": "invertMiniDisplay",
            "type": "checkbox",
            "label": {
                "en": "Invert mini display",
                "nl": "Mini display omkeren"
            },
            "value": true,
            "hint": {
                "en": "Inverts the background color of the mini display (The panel will restart to apply this change)",
                "nl": "Keert de achtergrondkleur van het mini display om (het panel zal herstarten om de verandering toe te passen)"
            }
        }
    ],
    "images": {
        "small": "{{driverAssetsPath}}/images/small.png",
        "large": "{{driverAssetsPath}}/images/large.png",
        "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
    }
}
