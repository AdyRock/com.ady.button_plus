    "platforms": [
        "local"
    ],
    "brandColor": "#444444",
    "name": {
        "en": "Button +",
        "nl": "Button+"
    },
    "description": {
        "en": "Control Button + panels",
        "nl": "Button+ panels besturen"
    },
    "category": [
        "appliances"
    ],
    "permissions": [
        "homey:manager:api"
    ],
    "images": {
        "small": "/assets/images/small.png",
        "large": "/assets/images/large.png",
        "xlarge": "/assets/images/xlarge.png"
    },
    "author": {
        "name": "Adrian Rockall",
        "email": "ady@rockalls.uk"
    },
    "contributors": {
        "translators": [
            {
                "name": "Henk_Renting"
            }
        ]
    },
    "bugs": {
        "url": "https://github.com/AdyRock/com.ady.button_plus/issues"
    },
    "homepage": "https://button.plus/",
    "support": "https://github.com/AdyRock/com.ady.button_plus/issues",
    "homeyCommunityTopicId": 89931,
    "api": {
        "getDevices": {
            "method": "post",
            "path": "/devices",
            "public": false
        },
        "getDevicesCapabilities": {
            "method": "post",
            "path": "/device_capabilities",
            "public": false
        },
        "getZones": {
            "method": "get",
            "path": "/zones",
            "public": false
        },
        "getRunning": {
            "method": "get",
            "path": "/running",
            "public": true
        },
        "setRunning": {
            "method": "post",
            "path": "/running",
            "public": false
        },
        "refresh": {
            "method": "get",
            "path": "/refresh",
            "public": false
        },
        "getSettingsChanged": {
            "method": "get",
            "path": "/settings_changed",
            "public": false
        },
        "getLog": {
            "method": "get",
            "path": "/getLog",
            "public": false
        },
        "getState": {
            "method": "get",
            "path": "/state",
            "public": false
        },
        "getVariables": {
            "method": "post",
            "path": "/get_variables",
            "public": false
        },
        "clearLog": {
            "method": "post",
            "path": "/clearLog",
            "public": false
        },
        "sendLog": {
            "method": "post",
            "path": "/sendLog",
            "public": false
        }
    }
}