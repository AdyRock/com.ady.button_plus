{
    "id": "com.ady.button_plus",
    "version": "0.0.1",
    "compatibility": ">=5.0.0",
    "sdk": 3,
    "platforms": [
        "local"
    ],
    "name": {
        "en": "Button +"
    },
    "description": {
        "en": "Control Button + panels"
    },
    "category": [
        "appliances"
    ],
    "permissions": ["homey:manager:api"],
    "images": {
        "small": "/assets/images/small.png",
        "large": "/assets/images/large.png",
        "xlarge": "/assets/images/xlarge.png"
    },
    "author": {
        "name": "Adrian Rockall",
        "email": "ady@rockalls.uk"
    },
    "api": {
        "getDevices": {
            "method": "post",
            "path": "/devices",
            "public": false
        },
        "getDevicesCapabilities": {
            "method": "post",
            "path": "/device_capabilities",
            "public": false
        },
        "getZones": {
            "method": "get",
            "path": "/zones",
            "public": false
        },
        "getRunning": {
            "method": "get",
            "path": "/running",
            "public": true
        },
        "setRunning": {
            "method": "post",
            "path": "/running",
            "public": false
        },
        "refresh": {
            "method": "get",
            "path": "/refresh",
            "public": false
        },
        "getSettingsChanged": {
            "method": "get",
            "path": "/settings_changed",
            "public": false
        },
        "getLog": {
            "method": "get",
            "path": "/log",
            "public": false
        },
        "getLogLevel": {
            "method": "get",
            "path": "/loglevel",
            "public": false
        },
        "setLogLevel": {
            "method": "post",
            "path": "/loglevel",
            "public": false
        },
        "getState": {
            "method": "get",
            "path": "/state",
            "public": false
        }
    }
}