{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.ady.button_plus",
  "version": "0.0.1",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Button +"
  },
  "description": {
    "en": "Control Button + panels"
  },
  "category": [
    "appliances"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Adrian Rockall",
    "email": "ady@rockalls.uk"
  },
  "flow": {
    "triggers": [
      {
        "title": {
          "en": "The left button was turned off"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=panel"
          }
        ],
        "id": "onoff.left_false"
      },
      {
        "title": {
          "en": "The left button was turned on"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=panel"
          }
        ],
        "id": "onoff.left_true"
      },
      {
        "title": {
          "en": "The left button was turned off"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=panel"
          }
        ],
        "id": "onoff.right_false"
      },
      {
        "title": {
          "en": "The right button was turned on"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=panel"
          }
        ],
        "id": "onoff.right_true"
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Button Panel"
      },
      "class": "button",
      "capabilities": [
        "onoff.left",
        "onoff.right"
      ],
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "pair": [
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "small": "/drivers/panel/assets/images/small.png",
        "large": "/drivers/panel/assets/images/large.png",
        "xlarge": "/drivers/panel/assets/images/xlarge.png"
      },
      "id": "panel"
    }
  ],
  "discovery": {
    "panel": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "panel",
        "protocol": "udp"
      },
      "id": "{{'mac'}}"
    }
  }
}